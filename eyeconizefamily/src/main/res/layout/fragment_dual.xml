<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- FamilyPickerFragment 占位布局 -->
    <FrameLayout
        android:id="@+id/familyPickerFragment"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/chatFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ChatFragment 占位布局 -->
    <FrameLayout
        android:id="@+id/chatFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/familyPickerFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FBFBFB"
        android:backgroundTint="#00FFFFFF"
        android:text="@string/double_click_tip"
        android:textColor="#838383"
        app:layout_constraintBottom_toTopOf="@+id/chatFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/familyPickerFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>
